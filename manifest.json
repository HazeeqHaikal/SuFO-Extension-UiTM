{
    "manifest_version": 3,
    "name": "UiTM Evaluation Automatic Tick",
    "version": "1.0",
    "description": "This extension will automatically tick all the boxes in UiTM Evaluation.",
    "author": "UNIVERSE",
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["index.js"]
    }],

    "background": {
        "service_worker": "index.js"
    },
    "permissions": ["scripting", "activeTab", "tabs"],
    "action": {
        "default_popup": "index.html",
        "default_title": "UiTM Evaluation Automatic Tick"
    },
    "icons": {
        "128": "icon128.png"
    }
}